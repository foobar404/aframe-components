<ComponentSchema packageName="com.iwsdk.components">
  <Enum name="DistanceModel">
    <EnumValue value="linear"/>
    <EnumValue value="inverse"/>
    <EnumValue value="exponential"/>
  </Enum>
  <Enum name="PlaybackMode">
    <EnumValue value="restart"/>
    <EnumValue value="overlap"/>
    <EnumValue value="ignore"/>
    <EnumValue value="fade-restart"/>
  </Enum>
  <Enum name="InstanceStealPolicy">
    <EnumValue value="oldest"/>
    <EnumValue value="quietest"/>
    <EnumValue value="furthest"/>
  </Enum>
  <Component name="AudioSource" description="AudioSource playback component for positional and non-positional sounds">
    <StringAttribute name="src" defaultValue=""/>
    <FloatAttribute name="volume" defaultValue="1f"/>
    <BooleanAttribute name="loop" defaultValue="false"/>
    <BooleanAttribute name="autoplay" defaultValue="false"/>
    <BooleanAttribute name="positional" defaultValue="true"/>
    <FloatAttribute name="refDistance" defaultValue="1f"/>
    <FloatAttribute name="rolloffFactor" defaultValue="1f"/>
    <FloatAttribute name="maxDistance" defaultValue="10000f"/>
    <EnumAttribute name="distanceModel" defaultValue="DistanceModel.inverse"/>
    <FloatAttribute name="coneInnerAngle" defaultValue="360f"/>
    <FloatAttribute name="coneOuterAngle" defaultValue="360f"/>
    <FloatAttribute name="coneOuterGain" defaultValue="0f"/>
    <EnumAttribute name="playbackMode" defaultValue="PlaybackMode.restart"/>
    <IntAttribute name="maxInstances" defaultValue="1"/>
    <FloatAttribute name="crossfadeDuration" defaultValue="0.1f"/>
    <EnumAttribute name="instanceStealPolicy" defaultValue="InstanceStealPolicy.oldest"/>
  </Component>
</ComponentSchema>