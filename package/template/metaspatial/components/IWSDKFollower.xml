<ComponentSchema packageName="com.iwsdk.components">
  <Enum name="FollowBehavior">
    <EnumValue value="face-target"/>
    <EnumValue value="pivot-y"/>
    <EnumValue value="no-rotation"/>
  </Enum>
  <Component name="Follower" description="Component for following another object">
    <Vector3Attribute name="offsetPosition" defaultValue="0f, 0f, 0f"/>
    <EnumAttribute name="behavior" defaultValue="FollowBehavior.pivot-y"/>
    <FloatAttribute name="maxAngle" defaultValue="30f"/>
    <FloatAttribute name="tolerance" defaultValue="0.4f"/>
    <FloatAttribute name="speed" defaultValue="1f"/>
    <BooleanAttribute name="needsPositionSync" defaultValue="true"/>
  </Component>
</ComponentSchema>