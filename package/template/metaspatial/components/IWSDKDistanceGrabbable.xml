<ComponentSchema packageName="com.iwsdk.components">
  <Enum name="MovementMode">
    <EnumValue value="MoveFromTarget"/>
    <EnumValue value="MoveTowardsTarget"/>
    <EnumValue value="MoveAtSource"/>
    <EnumValue value="RotateAtSource"/>
  </Enum>
  <Component name="DistanceGrabbable" description="Component for distance-based object grabbing and manipulation">
    <BooleanAttribute name="rotate" defaultValue="true"/>
    <Vector3Attribute name="rotateMax"/>
    <Vector3Attribute name="rotateMin"/>
    <BooleanAttribute name="translate" defaultValue="true"/>
    <Vector3Attribute name="translateMax"/>
    <Vector3Attribute name="translateMin"/>
    <BooleanAttribute name="scale" defaultValue="true"/>
    <Vector3Attribute name="scaleMax"/>
    <Vector3Attribute name="scaleMin"/>
    <EnumAttribute name="movementMode" defaultValue="MovementMode.MoveTowardsTarget"/>
    <BooleanAttribute name="returnToOrigin" defaultValue="false"/>
    <FloatAttribute name="moveSpeed" defaultValue="0.1f"/>
  </Component>
</ComponentSchema>